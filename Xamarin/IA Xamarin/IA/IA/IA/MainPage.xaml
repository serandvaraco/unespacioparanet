<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IA"
             x:Class="IA.MainPage">

    <StackLayout VerticalOptions="FillAndExpand">
        <ProgressBar x:Name="progressBar" IsVisible="False"></ProgressBar>
        <Image x:Name="imgPhoto" WidthRequest="150" HeightRequest="150" Aspect="AspectFit"/>
        <Button x:Name="btnCamera" Text="Usar cámara" Clicked="btnCamera_Clicked"/>
        <Button x:Name="btnStartEmotion" Text="Analizar imagen Emocion" Clicked="btnStart_Clicked"/>
        <Button x:Name="btnStartVision" Text="Analizar imagen Vision" Clicked="btnStartVision_Clicked"/>
        <Label x:Name="lblResults" VerticalOptions="Fill" HorizontalOptions="Fill"  ></Label>
    </StackLayout>

</ContentPage>